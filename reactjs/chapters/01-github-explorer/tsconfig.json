{
  "compilerOptions": {                                  
    "lib": ["dom", "dom.iterable", "esnext"], // entende que estamos lidando com a dom
    "allowJs": true,
    "jsx": "react-jsx",
    "noEmit": true, // nao emitir o codigo caso a gente faça o build
    "strict": true, // modo de lidar com erros dentro do js
    "moduleResolution": "node",                              
    "resolveJsonModule": true,
    "isolatedModules": true,                          
    "allowSyntheticDefaultImports": true,             
    "esModuleInterop": true,        
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"] // local que o código da aplicação vai estar
}
